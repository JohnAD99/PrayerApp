<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrayerApp.Views.RequestPrayerPage"
             Title="Request Prayers">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Request a New Prayer" FontSize="Large" HorizontalOptions="Center"/>

        <Editor Placeholder="Enter your prayer request here..."
                HeightRequest="100"
                SemanticProperties.Hint="Enter the details of your prayer request"/>

        <Label Text="Loaded Default Settings:" FontSize="Medium" Margin="0,20,0,0"/>
        <Label x:Name="LoadedUrgencyLabel" FontSize="Small" TextColor="Gray"/>
        <Label x:Name="LoadedExpirationLabel" FontSize="Small" TextColor="Gray"/>

        <Button Text="Submit Prayer Request" HorizontalOptions="Center" Margin="0,20,0,0"/>

    </VerticalStackLayout>
</ContentPage>
